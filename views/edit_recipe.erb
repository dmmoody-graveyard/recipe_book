<h3>Edit your new recipe:</h3>

<form action="/recipes/<%= @recipe.id %>" method="post">
	<input name="_method" type="hidden" value="patch">
	<input class="form-control" type="text" name="recipe" id="recipe" placeholder="<%= @recipe.name %>" value="<%= @recipe.name %>">
	<textarea class="form-control" name="instructions" id="instructions" rows="10" value=""><%= @recipe.instructions %></textarea>
	<button class="btn btn-default">Submit</button>
</form>