<h3>Ingredients</h3>

<ul>
	<% @ingredients.each do |ingredient| %>
	<li><%= ingredient.name %></li>
	<% end %>
</ul>

<form action="/ingredients/new" class="form-group" method="post">
	<input type="text" id="ingredient" name="ingredient" placeholder="Add a new ingredient">
	<button class="btn btn-default btn-sm" type="submit">Add</button>

</form>