<h3>Here is a list of all your recipes.</h3>

<ul class="list-group">
  <% @recipes.all.each do |recipe| %>
	<li class="list-group-item"><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></li>
  <% end %>
</ul>

<form action="/recipes/new" method="get">
	<button class="btn btn-default btn-warning btn-sm">Add New Recipe</button>
</form>